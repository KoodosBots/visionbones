# Production Dockerfile using dev server (temporary workaround)
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment to production
ENV NODE_ENV=production

# Start development server (serving as production for now)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]